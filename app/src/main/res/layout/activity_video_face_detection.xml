<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoFaceDetectionActivity">


    <com.ParentalDrivingSafetySystem.Project.CameraPreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.ParentalDrivingSafetySystem.Project.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.ParentalDrivingSafetySystem.Project.CameraPreview>


    <Button
        android:id="@+id/EndTrip"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="575dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/Black"
        android:onClick="EndTrip"
        android:text="End Trip"
        android:textColor="@color/wallpaperCol"


        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stop"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="575dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/Black"
        android:onClick="Stop"
        android:text="Stop"
        android:textColor="@color/wallpaperCol"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>

