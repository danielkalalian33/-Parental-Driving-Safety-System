<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:orientation="vertical"

    android:padding="16dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Aggresive"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/biglayout"
        android:id="@+id/leftAggresive"
        android:layout_marginTop="30dp"

        />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="10dp"
        android:progress="1"
        android:textAlignment="center"
        android:id="@+id/progressBarLeftc"
        android:layout_below="@+id/leftAggresivec"
        android:layout_marginTop="20dp"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/LeftNumberc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biglayout"
        android:layout_marginLeft="334dp"
        android:layout_marginTop="-55dp"
        android:text="1"
        android:textSize="20dp"


        />



    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="10dp"
        android:progress="0"
        android:id="@+id/progressBarRightc"
        android:layout_below="@+id/RightAggresive"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="5dp"
        android:progressTint="@color/Red"
        android:progressBackgroundTint="@color/Gray"

        />




    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Aggresive"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarLeftc"
        android:id="@+id/RightAggresive"
        android:layout_marginTop="-50dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:id="@+id/RightNumberc"
        android:layout_below="@+id/progressBarLeft"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="334dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudden Stop"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarRight"
        android:id="@+id/SuddenStop"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20dp"
        android:id="@+id/StopNumberc"
        android:layout_below="@+id/progressBarRightc"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="330dp"




        />



    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="10dp"
        android:progress="2"
        android:textAlignment="center"
        android:id="@+id/progressBarStopc"
        android:layout_below="@+id/SuddenStop"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="3dp"
        android:progressTint="@color/Green"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />






    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudden Acceleration"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarStop"
        android:id="@+id/SuddenAcceleration"
        android:layout_marginTop="20dp"

        />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="10dp"
        android:progress="1"
        android:textAlignment="center"
        android:id="@+id/progressBarAccelerationc"
        android:layout_below="@+id/SuddenAccelerationc"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/AccelerationNumberc"
        android:layout_below="@+id/progressBarStop"
        android:layout_marginTop="-55dp"
        android:layout_marginLeft="330dp"

        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/AccelerationNumberc"
        android:text="Start Time:"
        />

    <TextView
        android:id="@+id/StartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-27dp"
        android:text=":"
        android:textSize="20dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:textSize="20dp"
    android:layout_below="@+id/StartTime"
    android:text="End Time:"
    />

    <TextView
        android:id="@+id/EndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:text=":"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:text="Sleepy Status:"
        />

    <TextView
        android:id="@+id/Sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:layout_marginLeft="160dp"
        android:textSize="20dp"
        android:text=":"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:text="Start Destination:"
        />

    <TextView
        android:id="@+id/StartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:layout_marginLeft="190dp"
        android:textSize="20dp"
        android:text=":"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:text="End Destination:"
        />

    <TextView
        android:id="@+id/EndLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:layout_marginLeft="180dp"
        android:textSize="20dp"
        android:text=":"
        />

</LinearLayout>