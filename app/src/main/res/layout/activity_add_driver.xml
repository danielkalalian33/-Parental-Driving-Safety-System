<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addDriver"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/blue"
    >
    <Button
        android:id="@+id/Back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="880dp"
        android:background="@drawable/bbback"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Driver(s)"
        android:textSize="20dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="150dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/edit1"
        android:hint="Enter Mobile Number"
        android:inputType="number"

        />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/edit1"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-35dp"
        android:background="@drawable/plus"
        android:textSize="20dp"
        android:id="@+id/addnum"


        />




    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/submit"
        android:layout_marginLeft="147dp"
        android:text="Save"
        android:textColor="@color/wallpaperCol"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/Black"
        android:textSize="19dp"

        />






</LinearLayout>
