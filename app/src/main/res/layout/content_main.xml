<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:showIn="@layout/activation"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.ParentalDrivingSafetySystem.Project.MainActivity"
    android:background="@color/blue">

  <Button
      android:id="@+id/serviceB"
      android:layout_width="200dp"
      android:layout_height="80dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_marginStart="88dp"
      android:layout_marginLeft="88dp"
      android:layout_marginTop="250dp"
      android:background="@drawable/buttonshape"
      android:backgroundTint="@color/darkblue"
      android:text="Start Trip"
      android:textSize="20dp"


      android:textStyle="bold" />



  <Button
      android:id="@+id/DriverReport"
      android:layout_width="200dp"
      android:layout_height="80dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_marginStart="88dp"
      android:layout_marginLeft="88dp"
      android:layout_marginTop="350dp"
      android:background="@drawable/buttonshape"
      android:backgroundTint="@color/Black"
      android:text="Report"
      android:textSize="20dp"
      android:textColor="@color/wallpaperCol"


      android:textStyle="bold" />

  <Button
      android:id="@+id/Logout"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_marginStart="1dp"
      android:layout_marginLeft="88dp"
      android:layout_marginTop="1dp"
      android:background="@drawable/iconfinder_exit_2676937"
      android:backgroundTint="@color/Black"
      android:textSize="20dp"
      android:textColor="@color/Black"
      android:textStyle="bold" />
  <TextView
      android:layout_width="64dp"
      android:layout_height="wrap_content"
      android:text="Logout"
      android:textSize="20dp"
      android:textColor="@color/Black"
    android:layout_marginTop="68dp"
      android:layout_marginLeft="10dp"
    />


</RelativeLayout>








