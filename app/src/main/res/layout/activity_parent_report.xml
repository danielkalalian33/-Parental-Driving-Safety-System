<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="2000dp"
        android:layout_height="200dp"
        android:background="@color/Back"
        android:id="@+id/biglayout">



        <Button
            android:id="@+id/Back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bbback"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
        <RatingBar

            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.5"
             android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:progressTint="@color/white"




            />
        <TextView
            android:id="@+id/ratingWord"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Daniel Nagi"

            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingWord"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:text="Driver Rating"

            android:textSize="20dp"/>


    </RelativeLayout>






    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Aggresive"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/biglayout"
        android:id="@+id/leftAggresive"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/LeftNumber"
        android:layout_below="@+id/biglayout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="360dp"




        />

   <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:progress="1"
        android:textAlignment="center"
        android:id="@+id/progressBarLeft"
        android:layout_below="@+id/leftAggresive"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />






    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Aggresive"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarLeft"
        android:id="@+id/RightAggresive"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20dp"
        android:id="@+id/RightNumber"
        android:layout_below="@+id/progressBarLeft"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="360dp"
        />



    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:progress="5"
        android:textAlignment="center"
        android:id="@+id/progressBarRight"
        android:layout_below="@+id/RightAggresive"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:progressTint="@color/Red"
        android:progressBackgroundTint="@color/Gray"

        />





    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudden Stop"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarRight"
        android:id="@+id/SuddenStop"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20dp"
        android:id="@+id/StopNumber"
        android:layout_below="@+id/progressBarRight"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="360dp"




        />



    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:progress="2"
        android:textAlignment="center"
        android:id="@+id/progressBarStop"
        android:layout_below="@+id/SuddenStop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:progressTint="@color/Green"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />






    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudden Acceleration"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/progressBarStop"
        android:id="@+id/SuddenAcceleration"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/AccelerationNumber"
        android:layout_below="@+id/progressBarStop"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="360dp"




        />



    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:progress="1"
        android:textAlignment="center"
        android:id="@+id/progressBarAcceleration"
        android:layout_below="@+id/SuddenAcceleration"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:progressBackgroundTint="@color/Gray"

        android:layout_gravity="center_horizontal" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/progressBarAcceleration"
    android:text="No of Trips:"
    android:textSize="20dp"
    />

    <TextView
        android:id="@+id/TripNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/progressBarAcceleration"

        android:textSize="20dp"
        />



</RelativeLayout>